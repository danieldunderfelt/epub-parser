{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es6",
      "esnext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "strict": true
  },
  "include": [
    "src",
    "test"
  ]
}
